
= render 'products/topHeader__inner'

%main.l-container
  .l-content
    %section.mypage-user-icon
      = image_tag asset_path("orange.png", alt: "背景"), size: "50x200"
      .user--info
        %figure
          = image_tag asset_path("logo.png", alt: "仮画像"), size: "50x50" 
        %h2.bold 
          = @nickname
        %ul.mypage-number
          %li.evaluation 
            評価
            %span.bold 
              0
          %li.count 
            出品数
            %span.bold 
              0
    .users-detail-description_box
      %p.font2  
        %text_area 自己紹介文を記入しよう！
      .user-profile
        = link_to "編集する", edit_user_path(current_user), class: "edit"
    %h2.item-box-head 
      この出品者の商品
      .items-box-content
        %section.item-box
          .productBox
            = render 'products/product'

  = render partial: 'side'
  
= render 'products/footer'
