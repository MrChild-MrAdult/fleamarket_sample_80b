- @products.each do |product|
  .productBox__List
    = link_to product_path(product.id) do
      %figure.productBox__img
        = image_tag product.images[0].url.url
      .productBox__body
        = product.name
        .details
          %ul
            %li #{product.price}円
            %li
              %i.fa.fa-star.likeIcon
          %p (税込)